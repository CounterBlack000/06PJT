<script type="text/javascript">

function fncAddPurchase() {
	//Form 유효성 검증
 	var name = document.detailForm.receiverName.value;
	var phone = document.detailForm.receiverPhone.value;
	var divyAddr = document.detailForm.divyAddr.value;

	if(name == null || name.length<1){
		alert("구매자명은 반드시 입력하여야 합니다.");
		return;
	}
	if(phone == null || phone.length<1){
		alert("전화번보는 반드시 입력하여야 합니다.");
		return;
	}
	if(divyAddr == null || divyAddr.length<1){
		alert("주소는 반드시 입력하셔야 합니다.");
		return;
	}


	document.detailForm.action='/addPurchase.do';
	document.detailForm.submit();
}
function resetData(){
	document.detailForm.reset();
}

</script>
